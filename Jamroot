import os ;

local boost_root_path = [ os.environ BOOST_ROOT ] ;
if ! $(boost_root_path)
{
    boost_root_path = "../boost_1_64_0" ;
}

use-project boost : $(boost_root_path) ;

project demos
  : requirements
    <include>include
    <cxxflags>-std=c++11
    <use>/boost//headers
  ;

exe simple : demo/simple.cpp ;
exe specific : demo/specific.cpp ;
exe scoped : demo/scoped.cpp ;
exe hide_model : demo/hide_model.cpp ;
exe unordered_set : test/unordered_set.cpp ;
exe map : test/map.cpp ;
exe variant             : test/variant.cpp ;

install stage
  : simple
    specific
    scoped
    hide_model
    unordered_set
    map
    variant
  ;
  