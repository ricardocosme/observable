run test/exp/set_get.cpp ;
run test/exp/unordered_map.cpp ;
run test/exp/unordered_map_of_observable.cpp ;
run test/exp/unordered_set.cpp ;
# run test/variant.cpp ;
# run test/variant_of_class.cpp ;
run test/exp/vector.cpp ;
run test/exp/vector_of_observable.cpp ;
run test/exp/vector_of_class.cpp ;
# run test/vector_of_vector.cpp ;

install stage
  : hide_model
    specific
    simple
  ;
  