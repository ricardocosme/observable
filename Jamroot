import os ;
import testing ;

local boost_root_path = [ os.environ BOOST_ROOT ] ;
if ! $(boost_root_path)
{
    boost_root_path = "../boost_1_64_0" ;
}

use-project boost : $(boost_root_path) ;

project observable
  : requirements
    <include>include
    <cxxflags>-std=c++11
    <use>/boost//headers
  ;

run test/class.cpp ;
run test/map.cpp ;
run test/map_of_observable.cpp ;
run test/value.cpp ;
run test/vector.cpp ;
run test/vector_of_observable.cpp ;
run test/unordered_map.cpp ;
run test/unordered_map_of_observable.cpp ;

