import os ;
import testing ;

local boost_root_path = [ os.environ BOOST_ROOT ] ;
if ! $(boost_root_path)
{
    boost_root_path = "../boost_1_64_0" ;
}

use-project boost : $(boost_root_path) ;

project demos
  : requirements
    <include>include
    <cxxflags>-std=c++11
    <use>/boost//headers
  ;

exe hide_model : demo/hide_model.cpp ;
exe simple : demo/simple.cpp ;
exe specific : demo/specific.cpp ;

